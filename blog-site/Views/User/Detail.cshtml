@model blog_site.Models.UserDetailModel

@{
    ViewBag.Title = "Detail";
}

<!-- Page Header-->
<header class="masthead">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="post-heading">
                    <div class="mb-3">
                        <span><b>Nome: </b><br />@Model.User.Nome</span>
                    </div>
                    <div class="mb-3">
                        <span><b>Username: </b><br />@Model.User.Username</span>
                    </div>
                    <div class="mb-3">
                        <span><b>Email: </b><br />@Model.User.Email</span>
                    </div>
                    <div class="mb-3">
                        <span><b>Numero telefono: </b><br />@Model.User.Telefono</span>
                    </div>
                    <div class="mb-3">
                        <span><b>Indirizzo: </b><br />Via @Model.User.Via - @Model.User.Città @Model.User.CodicePostale</span>
                    </div>
                    <div class="mb-3">
                        <span><b>Sito web: </b><br /><em>www.@Model.User.Sito</em></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content-->
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">

            <div class="site-heading mb-5">
                <h2>Post scritti da @Model.User.Username:</h2>
            </div>

            <!-- Post List-->
            @foreach (var post in Model.Posts)
            {
                @Html.Partial("../Post/SinglePost", post)
            }

        </div>
    </div>
</div>