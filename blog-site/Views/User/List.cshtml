@model blog_site.Models.UserListModel

@{
    ViewBag.Title = "List";
}

<!-- Page Header-->
<header class="masthead" style="background-image: url('/Content/assets/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Authors</h1>
                    <span class="subheading">A list of post users</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content-->
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">

            @foreach (var user in Model.Users)
            {
                <!-- Post preview-->
                <div>
                    <a href=@Url.Action("Detail", "User", new { id = user.UserId})>
                        <span><b>Name: </b> @user.Nome</span><br />
                        <span><b>Username:</b> @user.Username</span><br />
                    </a>
                </div>
                <!-- Divider-->
                <hr class="my-3" />
            }

            <!-- Pager-->
            <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">All users →</a></div>

        </div>
    </div>
</div>