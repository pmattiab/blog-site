@model blog_site.Models.ContactModel

@{
    ViewBag.Title = "Contact";
}

<!-- Page Header-->
<header class="masthead" style="background-image: url('/Content/assets/img/contact-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="page-heading">
                    <h1>Contact Me</h1>
                    <span class="subheading">Have questions? I have answers.</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content-->
<main class="mb-4">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <h2>Scrivici</h2>
                <div class="my-5">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-floating mb-5">
                            @Html.TextBoxFor(m => m.SenderName, new { @class = "form-control" })
                            @Html.LabelFor(m => m.SenderName, "Nome", new { @class = "col-md-2 control-label" })
                            @Html.ValidationMessageFor(m => m.SenderName, "Il nome è richiesto", new { @class = "invalid-feedback" })
                        </div>

                        <div class="form-floating mb-5">
                            @Html.TextBoxFor(m => m.SenderEmail, new { @class = "form-control" })
                            @Html.LabelFor(m => m.SenderEmail, "Email", new { @class = "col-md-2 control-label" })
                            @Html.ValidationMessageFor(m => m.SenderEmail, "La mail è richiesta", new { @class = "invalid-feedback" })
                        </div>

                        <div class="form-floating mb-5">
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                            @Html.LabelFor(m => m.Message, "Messaggio", new { @class = "col-md-2 control-label" })
                            @Html.ValidationMessageFor(m => m.Message, "Inserisci testo", new { @class = "invalid-feedback" })
                        </div>

                        <div class="d-none" id="submitSuccessMessage">
                            <div class="text-center mb-3">
                                <div class="fw-bolder">Form submission successful!</div>
                            </div>
                        </div>

                        <div class="d-none" id="submitErrorMessage">
                            <div class="text-center text-danger mb-3">
                                Error sending message!
                            </div>
                        </div>

                        <div>
                            <button class="btn btn-primary" id="submitButton" type="submit">
                                Invia
                            </button>
                        </div>
                    }

