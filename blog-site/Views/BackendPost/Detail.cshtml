@model blog_site.Models.BackendPostDetailModel

@{
    ViewBag.Title = "Detail";
}

<!-- Page Header-->
<header class="masthead" style="background-color:gray; padding:45px;">
</header>

<div class="container text-capitalize">

    <div>
        <a href=@Url.Action("List", "BackendPost") class="btn btn-primary">
            ← Torna alla lista dei post
        </a>
    </div>

    <div class="text-center mt-4 mb-5">
        <h2>Dettagli post</h2>
    </div>

    <div class="mb-4">
        <h4>Titolo:</h4>
        <p class="mt-1">@Model.Post.Titolo</p>
    </div>

    <div class="mb-4">
        <h4>Contenuto:</h4>
        <p class="mt-1">@Model.Post.Contenuto</p>
    </div>

    <div>
        <h4>Autore:</h4>
        <p class="mt-1">@Model.User.Nome<em> - username: @Model.User.Username</em></p>
    </div>

</div>

